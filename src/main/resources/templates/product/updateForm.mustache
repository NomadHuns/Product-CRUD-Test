{{> layout/header}}
<div class="container">
    <form action="/product/{{product.id}}/edit" method="post">
        <div class="mb-3 mt-3">
            상품명 : <input id="name" name="productName" type="text" value={{product.name}}>
        </div>
        <div class="mb-3 mt-3">
            상품가격 : <input id="price" name="productPrice" type="number" value={{product.price}}>
        </div>
        <div class="mb-3 mt-3">
            상품수량 : <input id="qty"name="productQty"  type="number" value={{product.qty}}>
        </div>
        <button type="submit" class="btn btn-primary">상품수정완료</button>

    </form>
</div>
{{> layout/footer}}