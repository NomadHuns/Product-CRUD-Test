    <form action="/product/${update.productId}/edit" method="post">
        <div class="mb-3 mt-3">
            상품명 : <input id="name" name="productName" type="text" value=바나나>
        </div>
        <div class="mb-3 mt-3">
            상품가격 : <input id="price" name="productPrice" type="number" value=1000>
